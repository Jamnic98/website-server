{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["es6"],
    "allowJs": true,
    "outDir": "build",
    "rootDir": "src",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "lib": ["es2015"],
  "include": ["**/*.ts", "**/*.*.ts", "__tests__/"],
  "exclude": ["node_modules"]
}
